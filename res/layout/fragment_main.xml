<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:background="@color/Beige"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_textView_foot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fragmentinicio_frame"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginTop="20sp">
			
              <TextView
                  android:id="@+id/user"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="@string/user"
                  android:textSize="15sp" />

            <EditText
                android:id="@+id/usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:gravity="center"
                android:ems="10"
                android:singleLine="true"
                android:layout_marginTop="20sp"
                android:textColor="@color/White"
                android:textCursorDrawable="@null" >

                <requestFocus />
            </EditText>

        </FrameLayout>

        <FrameLayout
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
             <TextView
                 android:id="@+id/clave"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:textSize="15sp"
                 android:text="@string/pass" />

           	<EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:ems="10"
                android:gravity="center"
                android:layout_marginTop="20sp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/White"
                android:textCursorDrawable="@null" >


            </EditText>
            
            
            
        </FrameLayout>

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" >
           	
             <TextView
                 android:id="@+id/ip"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:textSize="15sp"
                 android:text="@string/ip" />

           	<EditText
                android:id="@+id/dir_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:gravity="center"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:singleLine="true"
                android:textColor="@color/White"
                android:textCursorDrawable="@null" >


            </EditText>
            
        </FrameLayout>

        <FrameLayout
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
           	
             <TextView
                 android:id="@+id/port"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:textSize="15sp"
                 android:text="@string/puerto" />

           	<EditText
                android:id="@+id/puerto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:singleLine="true"
                android:textColor="@color/White"
                android:textCursorDrawable="@null" >


            </EditText>
            
            
            
        </FrameLayout>

        <ImageButton
            android:id="@+id/boton1"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:src="@drawable/ic_menu_send" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentinicio_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/darkblue"
        android:padding="5dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/inicio"
            android:textColor="@color/White"
            android:textSize="15dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/main_textView_foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/uja"
        android:text="@string/help_uja"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />

</RelativeLayout>