<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    style="@style/Mixto"
    android:layout_alignParentBottom="true"
    android:background="@color/Beige"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/fragmentinicio_frame"
        android:layout_width="319dp"
        style="@style/Mixto"
        android:layout_alignParentTop="true"
        android:background="@color/darkblue"
        android:padding="5dp" >

        <TextView
            style="@style/TextView.Uno"
            android:text="@string/inicio"
            android:textColor="@color/White" />
    </FrameLayout>

    <TextView
        android:id="@+id/main_textView_foot"
        style="@style/TextViewFoot" />

    <LinearLayout
        style="@style/Mixto"
        android:layout_above="@+id/main_textView_foot"
        android:layout_below="@+id/fragmentinicio_frame" >

        <FrameLayout
            style="@style/FramesLand.Uno"
            android:layout_weight="0.8" >

            <LinearLayout
                style="@style/LinearLayout">

                <FrameLayout
                    style="@style/FramesLand">
                    
                    <TextView
                    android:id="@+id/user"
                    style="@style/TextView"
                    android:text="@string/user" />
                </FrameLayout>

                <FrameLayout
                    style="@style/FramesLand">
                    
                     <TextView
                    android:id="@+id/clave"
                    style="@style/TextView"
                    android:text="@string/pass" />
                    
                </FrameLayout>

                <FrameLayout
                    style="@style/FramesLand">
                     
                    <TextView
                    android:id="@+id/ip"
                    style="@style/TextView"
                    android:text="@string/ip" />
                </FrameLayout>

                <FrameLayout
                    style="@style/FramesLand">
                    
                      <TextView
                    android:id="@+id/port"
                    style="@style/TextView"
                    android:text="@string/puerto" />
                </FrameLayout>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            style="@style/FramesLand.Uno"
            android:layout_weight="1" >

            <LinearLayout
               style="@style/LinearLayout">

                <FrameLayout
                    style="@style/FramesLand">
                    
                    <EditText
                        android:id="@+id/usuario"
                        style="@style/EditIniciales"
                        android:layout_marginTop="0dp"
                        android:hint="@string/user3">
                    <requestFocus />
                </EditText>
                </FrameLayout>

                <FrameLayout
                   style="@style/FramesLand">
                    
                    <EditText
                    android:id="@+id/password"
	                style="@style/EditIniciales"
	                android:layout_marginTop="0dp"
	                android:inputType="textPassword"
	                android:hint="@string/pass3"/>
                </FrameLayout>

                <FrameLayout
                    style="@style/FramesLand">
                    
                    <EditText
                    android:id="@+id/dir_ip"
	                style="@style/EditIniciales"
	                android:layout_marginTop="0dp"
	                android:hint="@string/ip3"/> 
                </FrameLayout>

                <FrameLayout
                    style="@style/FramesLand">
                    
                    <EditText
                    android:id="@+id/puerto"
	                style="@style/EditIniciales"
	                android:layout_marginTop="0dp"
	                android:hint="@string/puerto3"
	                android:inputType="number"/>
                </FrameLayout>

            </LinearLayout>

        </FrameLayout>

        <ImageButton
            android:id="@+id/boton1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_menu_send" />

    </LinearLayout>

</RelativeLayout>